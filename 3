#include<iostream>
using namespace std;
class CDate{
private:
    int year,day,month;
public:
    CDate(int y,int m,int d);
    int getday(int y,int m);
    void NewDay();
    void display();
};
CDate::CDate(int y,int m,int d)
{
    year=y;
    month=m;
    day=d;
}
int CDate::getday(int y,int m)
{
    int flag;
    if((y%400==0)||(y%4==0&&y%100!=0))
    {
        flag=1;
    }
    else
    {
        flag=0;
    }
    switch(m)
    {
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12:
        return 31;

    case 4:
    case 6:
    case 9:
    case 11:
        return 30;
    case 2:
        if(flag==1)
            return 29;
        else
            return 28;
    }
}
void CDate::NewDay()
{
    day++;
    if(day>getday(year,month))
    {
        day=1;
        month++;
    }
    if(month>12)
    {
        month=1;
        year++;
    }
}
void CDate::display()
{
    cout<<year<<"-"<<month<<"-"<<day<<endl;
}
int main()
{
    CDate today(2016,12,3);
    cout<<"today:";
    today.display();
    for(int i=0;i<100;i++)
    {
        today.NewDay();
    }
    cout<<"after 100 days:";
    today.display();
    return 0;
}
